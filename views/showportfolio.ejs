<%- include("partials/header.ejs") %>

<div class="ui main text container">
    <div class="ui huge header"> Trading Project </div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <p><%= user.userId %></p>
            <p><%= user.name %></p>
            <div class="items">
                <% user.portfolio.forEach(function(stock){ %>
                <div class="content">
                    <div class="description">
                        <%= stock.stockTickerSymbol %>
                        <%= stock.stockAvgPrice %>
                        <%= stock.stockQty %>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
</div>



